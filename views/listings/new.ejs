<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
      <div class="cols-8 offset-0">
        <br><br>
      <h3>Create a New Listing</h3>
      <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <!-- title div -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input class="form-control" id="title" name="listing[title]" placeholder="Add a catchyu title" type="text" required />
          <div class="valid-feedback">Title looks good!</div>
        </div>
        <!-- description div -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          required  >
          </textarea>
          <div class="invalid-feedback">Please Enter a short description</div>
        </div>
         <!-- image div -->
         <div class="mb-3">
          <label for="image" class="form-label">Upload listing Image</label>
          <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
          required
        />
        </div>
         <!-- price div -->
        <div class="row " >
 <div class="mb-3 col-md-4">
  <label for="price" class="form-label">Price</label>
  <input id="price" class="form-control" name="listing[price]" placeholder="1200"  required />
  <div class="invalid-feedback">Price should be valid.</div>
 </div>
<!-- country div -->
<div class="mb-3 col-8">
  <label for="country" class="form-label">Country</label>
  <input id="country" class="form-control" name="listing[country]" placeholder="IND" type="text" required />
  <div class="invalid-feedback">Country Name Should be valid</div>
</div>
        </div>
        <!-- location div -->
         <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
          id="location"
          name="listing[location]"
          placeholder="Kanpur"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location should be valid</div>
         </div>
        <button class="btn btn-dark mt-3 add-btn">Add</button>
      </form>
    </div>
    </div>
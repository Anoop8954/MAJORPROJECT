<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
<h3>Edit your Listing</h3>
<form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data" novalidate >
  <!-- title -->
   <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" type="text" required/>
    <div class="valid-feedback">Title looks good!</div>
   </div>
  <!-- description -->
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea
     id="description"
     class="form-control"
     name="listing[description]" required>
      <%= listing.description %></textarea>
      <div class="invalid-feedback">Please Enter a short description</div>
  </div>
  <!-- preview -->
  <div class="mb-3">
    Original Listing Image <br>
  <img src="<%= originalImg %>" alt="">
  </div>
 <!-- image -->
  <div class="mb-3">
    <label for="image" class="form-label">Upload New Image </label>
    <input
    name="listing[image]"
    type="file"
    class="form-control"
  />
  <div class="invalid-feedback">Link should be valid</div>
  </div>
  <div class="row">
<!-- price -->
<div class="mb-3 col-md-4">
<label for="price" class="form-label">Price</label>
<input class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required />
<div class="invalid-feedback">Price should be valid.</div>

</div>
<!-- country -->
<div class="mb-3 col-8">
<label for="country" class="form-label">Country</label>
<input class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required />
<div class="invalid-feedback">Country Name Should be valid</div>
</div>
  </div>
  <!-- location -->
   <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input
      class="form-control"
      name="listing[location]"
      value="<%= listing.location %>"
      type="text"
      required
    />
    <div class="invalid-feedback">Location should be valid</div>
   </div>
  <button class="btn btn-dark edit-btn mt-3">Edit</button>
</form>
</div>

